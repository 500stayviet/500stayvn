model User {
  id            String    @id
  email         String    @unique
  displayName   String?
  role          String    @default("guest") // guest, owner, admin
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
  properties    Property[]
  bookings      Booking[]
  lessorProfile LessorProfile?
}

model Property {
  id                    String    @id @default(uuid())
  title                 String
  original_description  String?
  translated_description String?
  price                 Float
  priceUnit             String    @default("vnd")
  area                  Float
  bedrooms              Int?      @default(0)
  bathrooms             Int?      @default(0)
  lat                   Float?
  lng                   Float?
  address               String
  unitNumber            String?
  images                String[]
  amenities             String[]
  maxAdults             Int?      @default(2)
  maxChildren           Int?      @default(0)
  status                String    @default("active") // active, inactive, pending
  
  ownerId               String
  owner                 User      @relation(fields: [ownerId], references: [id])
  
  checkInDate           DateTime?
  checkOutDate          DateTime?
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
  
  bookings              Booking[]
}

model Booking {
  id            String    @id @default(uuid())
  propertyId    String
  property      Property  @relation(fields: [propertyId], references: [id])
  guestId       String
  guest         User      @relation(fields: [guestId], references: [id])
  
  checkInDate   DateTime
  checkOutDate  DateTime
  totalPrice    Float
  status        String    @default("pending") // pending, confirmed, cancelled, completed
  
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model ChatRoom {
  id          String    @id @default(uuid())
  bookingId   String?   @unique
  createdAt   DateTime  @default(now())
  messages    Message[]
}

model Message {
  id          String    @id @default(uuid())
  roomId      String
  room        ChatRoom  @relation(fields: [roomId], references: [id])
  senderId    String
  content     String
  isRead      Boolean   @default(false)
  createdAt   DateTime  @default(now())
}

model LessorProfile {
  id                    String    @id @default(uuid())
  userId                String    @unique
  user                  User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  // KYC Step 1: 전화번호 인증
  phoneNumber           String?
  phoneVerified         Boolean   @default(false)
  phoneVerifiedAt       DateTime?
  
  // KYC Step 2: 신분증 인증
  idType                String?   // 'id_card', 'passport'
  idNumber              String?
  fullName              String?
  dateOfBirth           DateTime?
  issueDate             DateTime?
  expiryDate            DateTime?
  idDocumentFrontPath   String?   // 파일 경로: public/uploads/verification/[userId]/id_front.jpg
  idDocumentBackPath    String?   // 파일 경로: public/uploads/verification/[userId]/id_back.jpg
  passportImagePath     String?   // 파일 경로: public/uploads/verification/[userId]/passport.jpg
  
  // KYC Step 3: 얼굴 인증
  faceFrontPath         String?   // 정면
  faceUpPath            String?   // 위
  faceDownPath          String?   // 아래
  faceLeftPath          String?   // 왼쪽
  faceRightPath         String?   // 오른쪽
  
  // 인증 상태
  verificationStatus    String    @default("pending") // pending, verified, rejected
  kycStep1Completed     Boolean   @default(false)
  kycStep2Completed     Boolean   @default(false)
  kycStep3Completed     Boolean   @default(false)
  
  createdAt             DateTime  @default(now())
  updatedAt             DateTime  @updatedAt
}